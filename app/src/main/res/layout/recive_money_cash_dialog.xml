<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="650dp"
    android:background="@drawable/purple_ice_gray"
    android:layout_height="500dp">

    <LinearLayout
        android:id="@+id/pa"
        android:layout_width="650dp"
        android:layout_height="500dp"
        android:background="@color/white_two"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.741"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/billLayout"
            android:layout_width="455dp"
            android:layout_height="165dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:layout_marginRight="40dp"
            android:background="@color/purple_2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="@string/total"
                    android:textAllCaps="false"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_total_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textAllCaps="false"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="@string/receved"

                    android:textAllCaps="false"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/recceved_money_editText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/items_stroke"
                    android:text=""
                    android:padding="5dp"

                    android:textColor="@color/purple"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="@string/remaining"
                    android:textAllCaps="false"
                    android:textColor="@color/purple"
                    android:textStyle="bold"



                    />

                <TextView
                    android:id="@+id/remaining_Textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/items_stroke"
                    android:padding="5dp"

                    android:text=""
                    android:textColor="@color/purple"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent">
            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/back_white"
                android:fontFamily="casual"

                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/purple"
                android:textStyle="bold" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/back_white"
            android:fontFamily="casual"
            android:layout_marginLeft="10dp"

            android:text="@string/cancel"
            android:textColor="@color/purple"
            android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>